<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.boo.apimvp.MainActivity">

    <Button
        android:id="@+id/main_to_people"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Person API" />

    <Button
        android:id="@+id/main_to_cities"
        app:layout_constraintEnd_toEndOf="@id/main_to_people"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Cities API"
        app:layout_constraintTop_toBottomOf="@+id/main_to_people"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/main_to_people"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/main_to_people" />

</android.support.constraint.ConstraintLayout>
